<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <h1>Safari Reading list</h1>
    <ul>
      <% reading_list.each do |entry| %>
      <li>
        <h4><a href="<%= entry[:url] %>"><%= entry[:title] %></a></h4>
        <p>
          <%= entry[:description] %>
        </p>
      </li>
      <% end %>
    </ul>
  </body>
</html>